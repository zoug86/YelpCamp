<% layout('layouts/boilerplate') %>
    <style>
        .fix {
            height: 15vh;
        }
    </style>
    <div class="container d-flex justify-content-center align-items-center mt-5 mb-4">
        <div class="row">
            <dic class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
                <div class="card shadow">

                    <img src="https://images.unsplash.com/photo-1532339142463-fd0a8979791a?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80"
                        alt="" class="card-img-top">

                    <div class="card-body">
                        <h5>Register</h5>
                        <form action="/register" method="POST" class="needs-validation mb-3" novalidate>
                            <div class="mb-3">
                                <label for="username" class="form-label"> Username</label>
                                <input type="text" class="form-control" id="username" placeholder="enter a username"
                                    name="username" autofocus required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label"> Email</label>
                                <input type="text" class="form-control" id="email" placeholder="enter an email"
                                    name="email" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label"> Password</label>
                                <input type="password" class="form-control" id="password" placeholder="enter a password"
                                    name="password" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <button class="btn btn-success btn-block">Register</button>
                        </form>
                    </div>
                </div>
            </dic>
        </div>
    </div>